@model Product_Catalog_Order.UI.Models.CardModel.Card
@{
    ViewBag.Title = "Index";
}

<div class="container mt-5">

    @if (Model.cardItems.Count() > 0)
    {
        <div class="row">

            <div class="col-md-12">

                <h2>Shopping Bang</h2>
                <hr />



                <table class="table table-bordered">

                    <thead>

                        <tr>
                            <th></th>
                            <th>Quantity</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Sum Total</th>
                            <th></th>


                        </tr>

                    </thead>

                    <tbody>

                        @foreach (var item in Model.cardItems)
                        {

                            <tr>

                                <td><img src="~/Image/@item.Product.Image" width="50" /></td>
                                <td>@item.Quantity</td>
                                <td>@item.Product.ProductName</td>
                                <td>@item.Product.Price</td>
                                <td>@((item.Product.Price * @item.Quantity).ToString("c"))</td>
                                <td>

                                    @using (Html.BeginForm("DeleteToProduct","Card"))
                                    {

                                        @Html.Hidden("ID",item.Product.ID);
                                        <button class="btn btn-danger" type="submit">Delete To Product <i class="fas fa-trash-restore"></i></button>

                                    }




                                </td>


                            </tr>
                        }


                    </tbody>

                    <tfoot>
                        <tr>
                            <td colspan="5"></td>
                            <td>@Model.Total().ToString("c")</td>


                        </tr>


                    </tfoot>




                </table>
                <div class="text-center">
                    <a href="~/Home/List" class="btn btn-primary"><i class="fas fa-shopping-basket"></i>Shopping Go On</a>
                    <a href="~/Card/CheckOut" class="btn btn-success"><i class="fas fa-check"></i>Shopping Complete</a>
                </div>
            </div>



        </div>





    }

    else
    {

        <div class="alert alert-danger" role="alert">
            <p class="bold"><i class="fas fa-exclamation-triangle"></i>Sepetiniz de ürün bulunmamaktadır</p>
        </div>
    }




</div>


