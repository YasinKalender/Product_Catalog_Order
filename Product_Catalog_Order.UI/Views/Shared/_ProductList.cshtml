@model List<Product_Catalog_Order.DAL.Entities.ORM.Entity.Concrete.Product>


<div class="container">
    <div class="row">



        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img class="card-img-top" src="~/Image/@item.Image" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">@item.Description</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-muted">@item.AddDate <a href="/Home/Details/@item.ID" class="btn btn-primary">Details</a></small>
                    </div>
                </div>
            </div>
        }


    </div>



</div>
