@model Product_Catalog_Order.DAL.Entities.ORM.Entity.Concrete.Product
@{
    ViewBag.Title = "Details";
}


<div class="container">

    <div class="row mt-5">

        <div class="col-md-4">

            <img src="~/Image/@Model.Image" class="img-responsive img-rounded">


        </div>

        <div class="col-md-8">

            <h1>@Model.ProductName</h1>

            <div class="row">
                <div class="col-md-12">
                    <span class="badge badge-primary">@Model.Stock</span>
                    <span class="product-number">#123456789</span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <p class="desription">@Model.Description</p>


                </div>
            </div>



            <div class="row">

                <div class="col-md-3">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <span class="badge badge-warning">53</span>


                </div>

                <div class="col-md-4" id="review">

                    <a href="">Write a review</a>




                </div>


            </div>

            <div class="clearfix">

                <div class="row float-right">
                    <div class="col-md-12">
                        <h4 id="product-prices">@Model.Price</h4>
                    </div>
                </div>

                <div class="row float-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="col-md-12">
                            @using (Html.BeginForm("AddToProduct", "Card"))
                            {
                                @Html.HiddenFor(i => i.ID)
                                <button type="submit" class="btn btn-success">Add To Cart <i class="fas fa-credit-card pl-2"></i></button>
                            }
                        </div>
                    }
                </div>
            </div>




        </div>





    </div>
    <div class="bd-example bd-example-tabs">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="home" aria-selected="true">Description</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="payment-tab" data-toggle="tab" href="#payment" role="tab" aria-controls="payment" aria-selected="false">Payment</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="comment-tab" data-toggle="tab" href="#comment" role="tab" aria-controls="comment" aria-selected="false">Comment</a>
            </li>
        </ul>
